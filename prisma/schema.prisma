generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String?         @unique
  emailVerified DateTime?
  password      String?
  image         String?
  role          String          @default("USER") // USER or ADMIN
  accounts      Account[]
  sessions      Session[]
  projectReqs   ProjectRequest[]
  supportTix    SupportTicket[]
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Lead {
  id        String   @id @default(cuid())
  name      String
  email     String
  company   String?
  message   String?
  budget    String?
  status    String   @default("NEW")
  createdAt DateTime @default(now())
}

model ProjectRequest {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String
  budget      String?
  timeline    String?
  status      String   @default("PENDING") // PENDING, IN_PROGRESS, COMPLETED, CANCELLED
  files       FileUploadMeta[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SupportTicket {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  subject     String
  description String
  category    String   @default("GENERAL") // GENERAL, BUG, BILLING
  priority    String   @default("NORMAL") // LOW, NORMAL, HIGH, URGENT
  status      String   @default("OPEN") // OPEN, IN_PROGRESS, RESOLVED, CLOSED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model FileUploadMeta {
  id               String   @id @default(cuid())
  projectRequestId String?
  projectReq       ProjectRequest?  @relation(fields: [projectRequestId], references: [id], onDelete: Cascade)
  fileName         String
  fileUrl          String
  fileType         String
  fileSize         Int
  createdAt        DateTime @default(now())
}

model CaseStudy {
  id          String   @id @default(cuid())
  title       String
  client      String
  description String
  problem     String
  solution    String
  impact      String
  imageUrl    String?
  tags        String   // comma separated
  createdAt   DateTime @default(now())
}
